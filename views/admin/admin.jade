extends ../layout

block content
    .col-md-offset-3.col-md-6.text-center
      h1= title
      if error != undefined
        .alert.alert-danger= error
      form.form(method='post')
        input.form-control(type='text',name='username',placeholder='Username',id='username')
        br
        input.form-control(type='password',name='password',placeholder='Password')
        br
        input.btn.btn-xl.btn-primary(type='submit',value='Submit')
